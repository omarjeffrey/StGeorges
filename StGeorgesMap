 <div id="map"></div>
 <!-- This button resets and redraws map to default coordinates -->

<script>
function myMap() {
	var myLatLng = {lat: 52.6915, lng: -2.4337};
	var mapCanvas = document.getElementById("map");
	var mapOptions = {
    center: myLatLng,
    zoom: 15
  }
  var map = new google.maps.Map(mapCanvas, mapOptions);
  //add an information marker to the centre of the map ("icon:" property below)
  var marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
    title: 'Marker!'//,
    //this part is for the icon type
    //icon: 'https://maps.google.com/mapfiles/kml/shapes/info-i.png'
  });
  //add a click event for the marker
  marker.addListener('click', function() {
  	//give the user an alert
    alert("You clicked on the marker\n I will now open a new tab");
    //now open a new tab or window 
    window.open("https:\\www.github.com");
  });

}
</script>
<script>
function resetMap() {
  myMap();
  }
</script>
<script src="https://maps.googleapis.com/maps/api/js?callback=myMap"></script>
</body>
