 <div id="map"></div>
 <!-- This button resets and redraws map to default coordinates -->
<div id="resetButton"><input type="button" value="Reset map" id="resetMap" onclick="resetMap();"></div>
<script>
function myMap() {
  var mapCanvas = document.getElementById("map");
  var mapOptions = {
    center: new google.maps.LatLng(52.6915, -2.4337),
    zoom: 15
  }
  var map = new google.maps.Map(mapCanvas, mapOptions);
}
</script>
<script>
function resetMap() {
  myMap();
  }
</script>
<script src="https://maps.googleapis.com/maps/api/js?callback=myMap"></script>
